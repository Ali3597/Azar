{% extends "base.html.twig" %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('passwordRequest') }}
{% endblock %}

{% block body %}

	<div class="passwordRequest">
		<h2 style="color: {{colors.allColors.primary}}">{{title}}</h2>

		{{ form_start(form) }}
		{{ form_rest(form) }}
		<button style="background-color: {{colors.allColors.primary}}" class="btn btn-primary">Réinitialiser mon mot de passe</button>

		{{ form_end(form) }}
	</div>

{% endblock %}
