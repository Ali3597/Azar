<div style="background-color : {{bande.color}}" class="high-marque">


	<div class=" marque">
		<div class="item_titre">
			<h1>
				{{bande.title|capitalize }}</h1>

		</div>
		<div class="item_description">{{bande.subtitle|capitalize}}</div>

		<div class="carouselSelect" data-type="article" data-visible={{bande.slideVisible}} data-scroll={{bande.slideToScroll}}>
			{% for marque in bande.bandeMarque.marques %}
				<a href=" {{path('productsMarques',{ slug: marque.slug } )}}" class="item_marque column ">


					<div class="item_image_marque">
						<img width="100%" height="100%" src="{{ vich_uploader_asset(marque.picture,'imageFile') }}" alt="">
					</div>
				</a>
			{% endfor %}

		</div>
	</div>
</div>
