<div class="right-produits-haut flex">
	{% for product in products %}

		<div class="produit flex column">
			<a href="{{path('produit',{ slug: product.slug })}}">

				<div class="img-produit">
					<img width="60%" height="95%" src="{{ vich_uploader_asset(product.pictures[0],'imageFile') }}" alt="">

				</div>
				<div class="titre-produit">
					<h3>{{product.name|capitalize}}</h3>

				</div>
				<div class="reference-produit">
					<h3>{{product.reference}}</h3>
				</div>
			</a>
			<div class="bas-produit flex column ">
				<div class="disponible flex column ">
					<h2>Disponibilit√© :
					</h2>
<h2>{{product.disponibilite}}</h2>

				</div>
				<div class="ajout-produit flex">
					<div class="flex surquantity column">
						<div class="quantity flex">
							<input readonly="readonly" type="number" name="tentacles" min="1" value="1">

						</div>
						<div class="unite">
							{{product.unite}}
						</div>
					</div>
<button style="background-color: {{colors.allColors.primary}}" data-name={{product.name}} data-id={{ product.id }} {{ is_granted('ROLE_USER') ? 'onclick="addBasket(this)"' : 'onclick="popup(`Vous devez vous connecter pour pouvoir ajoutez un produit dans votre panier`,`error`)"'}}>Ajoutez</button>



				</div>

			</div>
		</div>

	{% endfor %}


</div>
<div style="--background: {{colors.allColors.primary}};" class="righ-produits-bas flex column">


	{{ knp_pagination_render(products) }}

</div>
