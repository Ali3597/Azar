<div class="elements" data-sortable=".element">
	{% for promo in bande.bandePromo.promos %}
		<div class="element" data-position={{loop.index -1}} data-id={{promo.id}}>
			<div class="cross" onclick="removeElement(this)">
				<i class="fas fa-times"></i>
			</div>
			<img width="80%" height="80%" src="{{ vich_uploader_asset(promo.picture,'imageFile') }}" alt="">
			<p>{{promo.name}}</p>

		</div>
	{% endfor %}


</div>
<p class="errorElement"></p>
<div class="addnew">
	<button onclick="newpromo(this)">Rajoutez une nouvelle promo</button>
</div>
