{% extends 'base_admin.html.twig' %}
{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('form')}}
{% endblock %}

{% block body %}
	<div class="content column ">
		<div class="comment-form">
			{{ form_start(form)}}
			{{ form_rest(form) }}

			{% if item.picture %}

				<div class="imagecard">
					<img width="100%" height="100%" src="{{ vich_uploader_asset(item.picture,'imageFile') }}" alt="">

				</div>
			{% endif %}

			<button class="btn btn-primary">soumettre</button>
			{{ form_end(form)}}
		</div>
	</div>


{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('form') }}
{% endblock %}
