{% extends "base.html.twig" %}

{% block title %}Connexion
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('connexion') }}
{% endblock %}

{% block header %}

	{{ include('partials/_header_log.html.twig') }}
{% endblock %}


{% block body %}

	<div class="content flex column ">
		<h1 style="color: {{colors.allColors.primary}}">Bonjour chez vous !</h1>


		<h2 style="color: {{colors.allColors.primary}}">On est ravi de vous (re)voir !</h2>

		<a style="color: {{colors.allColors.primary}}" href="{{path('connexion')}}">Pas encore inscris ? Inscrivez vous !</a>
		<form action="{{ path('login') }}" class="column" method="post">
			<h1 style="color: {{colors.allColors.primary}}">Connexion</h1>

			<div class="form-row">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
			</div>
			<div class="form-row">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" required>
			</div>
			<a style="color: {{colors.allColors.primary}}" href="{{ path('reset-password-request') }}">Mot de passe oubli√© ?</a>


			<div class="form-row">
				<label>
					<input type="checkbox" name="_remember_me">Se souvenir de moi
				</label>
			</div>
			{% if error %}
				<ul class="form-errors mb-20">
					<li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
				</ul>
			{% endif %}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-primary mr-10" type="submit">
				Connexion
			</button>

		</form>


	</div>

{% endblock %}
{% block javascripts %}

	{{ encore_entry_script_tags('connexion') }}


{% endblock %}


{% block footer %}{% endblock %}
